<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Common layouts -->
    <style name="NoInternetConnectionTextViewStyle">
        <item name="android:background">@color/no_internet_connection_text_view_background_color</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/no_internet_connection</item>
        <item name="android:textColor">@color/no_internet_connection_text_view_text_color</item>
    </style>

    <!-- Repository search screen -->
    <style name="RepositorySearchScreenEditTextStyle">
        <item name="android:hint">@string/repository_search_screen_edit_text_hint</item>
    </style>

    <style name="RepositorySearchScreenSearchButtonStyle">
        <item name="android:text">@string/repository_search_screen_search_button_text</item>
    </style>

    <style name="RepositorySearchScreenRadioGroupLabel">
        <item name="android:text">@string/repository_search_screen_sort_by_label</item>
    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle">

    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle.Stars">
        <item name="android:text">@string/repository_search_screen_radio_button_stars_text</item>
    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle.Forks">
        <item name="android:text">@string/repository_search_screen_radio_button_forks_text</item>
    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle.Updated">
        <item name="android:text">@string/repository_search_screen_radio_button_updated_text</item>
    </style>

    <!-- Repositories adapter -->
    <style name="RepositoriesAdapterRootCardViewStyle">
        <item name="android:layout_marginStart">@dimen/repository_adapter_root_card_view_layout_margin_start</item>
        <item name="android:layout_marginTop">@dimen/repository_adapter_root_card_view_layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/repository_adapter_root_card_view_layout_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/repository_adapter_root_card_view_layout_margin_bottom</item>
        <item name="cardCornerRadius">@dimen/repository_adapter_root_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/repository_adapter_root_card_view_elevation</item>
    </style>

    <style name="RepositoriesAdapterRootViewStyle">
        <item name="android:paddingStart">@dimen/repository_adapter_root_view_padding_start</item>
        <item name="android:paddingTop">@dimen/repository_adapter_root_view_padding_top</item>
        <item name="android:paddingRight">@dimen/repository_adapter_root_view_padding_end</item>
        <item name="android:paddingBottom">@dimen/repository_adapter_root_view_padding_bottom</item>
    </style>

    <style name="RepositoriesAdapterTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/repository_adapter_title_text_size</item>
    </style>

</resources>
