<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Common layouts -->
    <style name="NoInternetConnectionTextViewStyle">
        <item name="android:background">@color/no_internet_connection_text_view_background_color</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/no_internet_connection</item>
        <item name="android:textColor">@color/no_internet_connection_text_view_text_color</item>
    </style>

    <!-- Repository search screen -->
    <style name="RepositorySearchScreenEditTextContainer">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/repository_search_screen_edit_text_container_padding_start</item>
        <item name="android:paddingEnd">@dimen/repository_search_screen_edit_text_container_padding_end</item>
    </style>

    <style name="RepositorySearchScreenEditTextStyle">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/repository_search_screen_edit_text_hint</item>
    </style>

    <style name="RepositorySearchScreenSearchButtonStyle">
        <item name="android:text">@string/repository_search_screen_search_button_text</item>
    </style>

    <style name="RepositorySearchScreenRadioGroupLabel">
        <item name="android:paddingStart">@dimen/repository_search_screen_sort_by_label_padding_start</item>
        <item name="android:text">@string/repository_search_screen_sort_by_label</item>
    </style>

    <style name="RepositorySearchScreenRadioGroupStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/repository_search_screen_radio_group_padding_start</item>
        <item name="android:paddingEnd">@dimen/repository_search_screen_radio_group_padding_end</item>
    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle">

    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle.Stars">
        <item name="android:text">@string/repository_search_screen_radio_button_stars_text</item>
    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle.Forks">
        <item name="android:text">@string/repository_search_screen_radio_button_forks_text</item>
    </style>

    <style name="RepositorySearchScreenRadioButtonBaseStyle.Updated">
        <item name="android:text">@string/repository_search_screen_radio_button_updated_text</item>
    </style>

    <style name="RepositorySearchScreenFadingLoadingViewStyle">
        <item name="android:background">@color/white_opacity_75</item>
    </style>

    <!-- Repositories adapter -->
    <style name="RepositoriesAdapterRootCardViewStyle">
        <item name="android:layout_marginStart">@dimen/repository_adapter_root_card_view_layout_margin_start</item>
        <item name="android:layout_marginTop">@dimen/repository_adapter_root_card_view_layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/repository_adapter_root_card_view_layout_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/repository_adapter_root_card_view_layout_margin_bottom</item>
        <item name="cardCornerRadius">@dimen/repository_adapter_root_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/repository_adapter_root_card_view_elevation</item>
    </style>

    <style name="RepositoriesAdapterRootViewStyle">
        <item name="android:paddingStart">@dimen/repository_adapter_root_view_padding_start</item>
        <item name="android:paddingTop">@dimen/repository_adapter_root_view_padding_top</item>
        <item name="android:paddingRight">@dimen/repository_adapter_root_view_padding_end</item>
        <item name="android:paddingBottom">@dimen/repository_adapter_root_view_padding_bottom</item>
    </style>

    <style name="RepositoriesAdapterTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/repository_adapter_title_text_size</item>
    </style>

    <!-- Repository detail -->
    <style name="RepositoryDetailRootCardViewStyle">
        <item name="android:layout_margin">@dimen/repository_details_root_card_view_layout_margin</item>
        <item name="cardCornerRadius">@dimen/repository_details_root_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/repository_details_root_card_view_elevation</item>
    </style>

    <style name="RepositoryDetailRootContentLayoutStyle">
        <item name="android:paddingStart">@dimen/repository_details_root_content_layout_padding_start</item>
        <item name="android:paddingEnd">@dimen/repository_details_root_content_layout_padding_end</item>
        <item name="android:paddingBottom">@dimen/repository_details_root_content_layout_padding_bottom</item>
    </style>

    <style name="RepositoryDetailRepositoryNameStyle">
        <item name="android:textSize">@dimen/repository_details_repository_name_text_size</item>
    </style>

    <style name="RepositoryDetailRepositoryFullNameStyle">
        <item name="android:layout_marginBottom">@dimen/repository_details_repository_full_name_layout_margin_bottom</item>
        <item name="android:textSize">@dimen/repository_details_repository_full_name_text_size</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle">
        <item name="android:paddingEnd">@dimen/repository_details_label_text_view_padding_end</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.Stars">
        <item name="android:text">@string/repository_details_stars_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.Watchers">
        <item name="android:text">@string/repository_details_watchers_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.Forks">
        <item name="android:text">@string/repository_details_forks_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.OpenIssuesCount">
        <item name="android:text">@string/repository_details_open_issues_count_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.Language">
        <item name="android:text">@string/repository_details_language_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.CreatedAt">
        <item name="android:text">@string/repository_details_created_at_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.UpdatedAt">
        <item name="android:text">@string/repository_details_updated_at_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.IsPrivate">
        <item name="android:text">@string/repository_details_is_private_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.HasIssues">
        <item name="android:text">@string/repository_details_has_issues_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.HasWiki">
        <item name="android:text">@string/repository_details_has_wiki_label_text</item>
    </style>

    <style name="RepositoryDetailLabelBaseStyle.AuthorNameLabel">
        <item name="android:text">@string/repository_details_author_name_label</item>
    </style>

    <style name="RepositoryDetailsAuthorLabelStyle">
        <item name="android:text">@string/repository_details_author_label_text</item>
        <item name="android:textSize">@dimen/repository_details_author_label_text_size</item>
    </style>

    <style name="RepositoryDetailsViewOnGithubButtonStyle">
        <item name="android:text">@string/repository_details_view_on_github_button_text</item>
    </style>

    <!-- User details -->
    <style name="UserDetailRootCardViewStyle" parent="RepositoryDetailRootCardViewStyle">

    </style>

    <style name="UserDetailsContentLinearLayoutStyle">
        <item name="android:paddingStart">@dimen/user_details_content_linear_layout_padding_start</item>
        <item name="android:paddingEnd">@dimen/user_details_content_linear_layout_padding_end</item>
        <item name="android:paddingBottom">@dimen/user_details_content_linear_layout_padding_bottom</item>
    </style>

    <style name="UserDetailsVisitBlogButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/user_details_visit_blog_button_text</item>
    </style>

</resources>
